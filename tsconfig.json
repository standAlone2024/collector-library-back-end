{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "types": ["node"],
      "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}